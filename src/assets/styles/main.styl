@import '~reset-css/reset.css'

::selection
  background yellow
  color red
  text-shadow none

::-moz-selection
  background yellow
  color red
  text-shadow none

*
  box-sizing: border-box;

html {
  font-family system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  text-rendering optimizeLegibility
  background-color white
  color black
  font-size 18px
  cursor default
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-overflow-scrolling touch
  overflow-x hidden
}

html,
body
  padding 0
  margin 0

.content-container
  max-width 640px
  margin 0 auto
  overflow hidden

h1,
h2,
h3
  margin 0 0 1rem 0
  font-size 1rem
  font-weight normal

p
  margin 0 0 1rem 0

a,
a:visited
  text-decoration none
  border 1px solid transparent
  border-bottom 1px solid blue
  color blue

a:focus
  border-bottom-width 2px
  outline none

ul
  list-style none
  padding 0
  margin 0

ul li
  display inline-block
  margin-right 1rem
  margin-bottom 0.5rem

ul.inline
  li
    margin-right 0.5rem
    margin-bottom 0
    &:last-child
      margin-right 0
